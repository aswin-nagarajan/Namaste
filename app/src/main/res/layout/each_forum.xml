<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView-->
        <!--android:layout_margin="8dp"-->
        <!--android:id="@+id/image_category"-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:src="@drawable/andr" />-->

        <RelativeLayout
            android:id="@+id/first_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp">

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:id="@+id/forum_uploader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="uploader_name" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:id="@+id/forum_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/forum_uploader"
                android:layout_marginBottom="2dp"
                android:textSize="20sp"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:text="Question" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:id="@+id/forum_question_extended"
                android:layout_width="wrap_content"
                android:text="asfdsfasfas"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/forum_question" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/first_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.venky97vp.android.namaste.core.modview.PanButton
                android:id="@+id/button_answer"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Answer"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>