<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.venky97vp.android.namaste.fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/colorPrimary" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="129dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_tiangle" />

                <android.support.v7.widget.CardView
                    android:id="@+id/profile_view"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_teacher_profile" />

                </android.support.v7.widget.CardView>

                <com.venky97vp.android.namaste.core.modview.PanTextView
                    android:id="@+id/teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_view"
                    android:layout_centerHorizontal="true"
                    android:text="V. Mahesh"
                    android:layout_marginBottom="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.venky97vp.android.namaste.core.modview.PanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teacher_name"
                    android:layout_centerHorizontal="true"
                    android:text="40045"
                    android:textColor="@android:color/white"
                    android:textSize="19sp" />

            </RelativeLayout>

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Date Of Birth"
                android:textSize="16sp" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="15th September 1976"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="School"
                android:textSize="16sp" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="D.A.V Senior Secondary School"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Contact"
                android:textSize="16sp" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="9876543210"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Classes Handled"
                android:textSize="16sp" />

            <com.venky97vp.android.namaste.core.modview.PanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="12-D : Biology\n11-A : Biology\n10-C : EVS"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
